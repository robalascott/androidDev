<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#4BA286"
    tools:context="com.example.qshake.NewUserActivity">

    <EditText android:id="@+id/userT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="top|left"
        android:inputType="text"
        android:lines="3"
        android:textColor="#D10D0D"
        android:background="#3D995C"
        android:minLines="2"
        android:typeface="monospace"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textAppearance="?android:attr/textAppearance"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_below="@id/userT"
        />
    <Button
        android:id="@+id/exitBT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:typeface="monospace"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:onClick="newuser"
        android:textStyle="bold"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_below="@id/imageView"
        android:textColor="#D10D0D"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:background="#267058"
        android:text="@string/input_user" />

</RelativeLayout>
